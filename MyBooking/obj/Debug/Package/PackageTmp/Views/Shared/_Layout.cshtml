<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <span class="header__title">
            @Html.ActionLink("Booking", "Index", "Posts")
        </span>
        <span class="header__account">
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Your login is " + User.Identity.Name, "Index", "Account", new { username = User.Identity.Name },new { @class = "header__account-item" })
                @Html.ActionLink("Sign out", "logoff", "Account", new { @class = "header__account-item" })
            }
            else
            {
                @Html.ActionLink("Sign in", "login", "Account", new { @class = "header__account-item" })
                @Html.ActionLink("Sign up", "register", "Account", new { @class = "header__account-item" })
            }
        </span>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>

</html>
